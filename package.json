{
  "name": "ng-tailwind-builder",
  "version": "0.0.1",
  "description": "Extract Classes from your Angular template to bundle TailwindCSS",
  "main": "lib/api.js",
  "repository": "https://github.com/vikaspotluri123/ng-tailwind-builder",
  "author": "Vikas Potluri <vikaspotluri123.github@gmail.com>",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "xo": "^0.33.1"
  },
  "peerDependencies": {
    "@angular/compiler": "^10.0.0",
    "typescript": ">3.9"
  },
  "xo": {
    "rules": {
      "func-names": [
        2,
        "as-needed"
      ]
    },
    "overrides": [
      {
        "files": [
          "test/**/*"
        ],
        "env": [
          "mocha"
        ],
        "rules": {
          "prefer-arrow-callback": "off",
          "func-names": "off"
        }
      }
    ]
  }
}
